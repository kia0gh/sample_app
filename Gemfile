source 'https://rubygems.org'

gem 'rails'
gem 'bootstrap-sass' 
gem 'bcrypt-ruby'
gem 'faker'
gem 'will_paginate'
gem 'bootstrap-will_paginate'

group :development, :test do
  gem 'sqlite3' 
  gem 'rspec-rails' 
  gem 'guard-rspec'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

gem 'jquery-rails'

group :test do
  gem 'capybara'
  gem 'factory_girl_rails'
  gem 'rb-fsevent', :require => false
  gem 'growl'
  gem 'guard-spork'  
  gem 'spork'
end

group :production do
  gem 'pg'
end